<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']/group/div[hasclass('oe_clear')]/.." position="after">
                <group string="Incoming Payments" groups="account.group_account_invoice" attrs="{'invisible': [('state', '=', 'draft')]}">
                    <group class="col-6 col-lg-3">
                        <button
                            name="%(action_view_account_voucher_wizard)d"
                            string="Create Payment"
                            type="action"
                            icon="fa-plus"
                            class=""
                            groups="account.group_account_invoice"
                            attrs="{'invisible': ['|', ('state', 'in', ['done','cancel']), ('is_allocated', '=', True)]}"
                        />
                    </group>
                    <field name="is_allocated" invisible="1" />
                    <field
                        name="account_payment_ids"
                        nolabel="1"
                        colspan="4"
                        context="{'form_view_ref': 'sale_advance_payment.view_account_payment_form_no_header','tree_view_ref': 'sale_advance_payment.view_sale_advance_payment_tree'}"
                    />
                    <group class="oe_subtotal_footer oe_right">
                        <field
                            name="left_to_alloc"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                        />
                        <div class="oe_inline oe_subtotal_footer_separator">
                            <label for="left_to_pay" />
                        </div>
                        <field
                            name="left_to_pay"
                            nolabel="1"
                            widget="monetary"
                            options="{'currency_field': 'currency_id'}"
                            class="oe_subtotal_footer_separator"
                        />
                    </group>
                </group>
            </xpath>

        </field>
    </record>
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <field name="invoice_status" position="before">
                <field
                    name="payment_status"
                    decoration-success="payment_status == 'paid'"
                    decoration-info="payment_status == 'partial'"
                    decoration-warning="payment_status == 'not_paid'"
                    widget="badge"
                    optional="hide"
                />
            </field>
            <field name="amount_total" position="after">
                <field
                    name="left_to_pay"
                    sum="Amount Residual"
                    widget="monetary"
                    decoration-bf="1"
                    optional="hide"
                />
            </field>
        </field>
    </record>
</odoo>
